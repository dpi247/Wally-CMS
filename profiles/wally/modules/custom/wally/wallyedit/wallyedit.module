      }
    break;
    case 'add_existing':
      $type_name=$form_state['type'];
      $fields=wydit_get_fields_infos_for_typename($type_name);
      
      //@todo: remove hard coding of parents
      $field_infos=$fields[$form_state['clicked_button']["#parents"][1]];
      
