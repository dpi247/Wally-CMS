    $arrays_to_merge = array(
      $extra_fields_display,
      $groups_display,
      $type[$fields],
    );

    $temp_merged_fields = call_user_func_array('array_merge', $arrays_to_merge);
    $temp_merged_fields['title']['display'] = 1;
