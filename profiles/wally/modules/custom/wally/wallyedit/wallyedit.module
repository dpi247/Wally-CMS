/**
 * Implementation of hook_init()
 */
function wallyedit_init(){
  global $custom_theme;
  if(arg(0) == 'batch' && arg(1) == '') {
    $custom_theme = variable_get('admin_theme', 'rubik');
    if (!variable_get('site_offline', 0)) {
      init_theme();
    }
  }
}

