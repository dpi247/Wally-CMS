function wydit_get_current_node_from_parents(&$form_state,$parents=NULL){
  
  if($parents==NULL)
    $parents=$form_state['parents'];
  
  $temp=$form_state;
  foreach($parents as $index=>$cursor_name){
    if(isset($temp[$cursor_name])){
      $temp=& $temp[$cursor_name];
    }
  }
  if($temp["#node"]){
    return $temp["#node"];
  }
  else return NULL;
}

