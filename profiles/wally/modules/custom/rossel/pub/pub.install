      'kvregion_sp' => array(
        'type' => 'int',
        'size' => 'small',
        'default' => 0,
      ),
      'kvville_sp' => array(
        'type' => 'int',
        'size' => 'small',
        'default' => 0,
      ),
      'version' => array(
        'type' => 'int',
        'size' => 'small',
