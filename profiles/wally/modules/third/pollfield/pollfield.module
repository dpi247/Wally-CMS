/**
* clear cache function after vote is done
*/
function pollfield_clear($node) {
  $cid = 'content:'. $node->nid .':'. $node->vid;
  cache_clear_all($cid, db_table_exists('cache_content') ? 'cache_content' : 'cache', TRUE);
  cache_clear_all();
}

