  }

  $nid=$node->nid;

  //get table
  $fields = content_fields();
  $db_info = content_database_info($fields[$field_name]);
  $table_content = $db_info['table'];
  $column = 'delta';
  $is_delta_exist = db_column_exists($table_content, $column);

  if ($is_delta_exist) {
